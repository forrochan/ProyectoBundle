{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
    <div class="form-group">
		<label class="col-lg-2 control-label"> {{ form_label(form.username) }}</label>
	    <div class="col-lg-5">{{form_widget(form.username)}}</div>
	</div>	
	<div class="form-group">
		<label class="col-lg-2 control-label">{{form_label(form.email)}}</label>
		<div class="col-lg-5">{{form_widget(form.email)}}</div>   
	</div>
	<div class="form-group">
		<label class="col-lg-2 control-label">{{form_label(form.current_password)}}</label>
		<div class="col-lg-5">{{form_widget(form.current_password)}}</div>   
	</div>
	{{form_rest(form)}}
	    <div>
	        <button type="submit" class="btn btn-default">{{ 'profile.edit.submit'|trans }} </button>
	    </div>
	
</form>
